<script>
    var {{ var_name }} = {
        data: {{ exposed|raw }},

        getClassConstant: function(className, constantName, defaultValue = null) {
            if (! (className in this.data.class) || ! (constantName in this.data.class[className])) {
                return defaultValue;
            }

            return this.data.class[className][constantName];
        },

        getParameter: function(paramName, defaultValue = null) {
            if (paramName in this.data.parameter) {
                return this.data.parameter[paramName];
            }

            return defaultValue;
        }
    };
</script>
